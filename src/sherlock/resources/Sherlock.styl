$highlight-text-color = #ffffff
$highlight-color = #428bca

.dropdown-menu form .sherlock
	position: relative
.sherlock
	height: 44px
	padding: 5px
	position: absolute
	right: 0
	top: 0
	width: 200px
	z-index: 25
	.input-group-addon
		width: 39px
	.text-box
		box-shadow: 0 6px 12px rgba(0, 0, 0, .175)
	.input-group,
	.matches-table
		width: 190px
	[data-dojo-attach-point='matchesList']
		display: block
		width: 100%
	.matches-table
		background-color: white
		display: none
		float: left
		font-size: 12px
		position: absolute
		top: 40px
		z-index: 99
		li.match:hover,
		.highlighted-row
			background-color: $highlight-color
			color: $highlight-text-color
			cursor: pointer
		li
			padding: 2px 12px
	span.glyphicon-search
		top: 0
	li.dropdown-header
		display: none
	.first-cell
		float: left
	.cnty-cell
		float: right
	[data-dojo-attach-point='spinnerDiv']
		padding-left: 7px
